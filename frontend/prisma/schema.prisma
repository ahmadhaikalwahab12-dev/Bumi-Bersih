  generator client {
    provider = "prisma-client-js"
  }

  datasource db {
    provider = "sqlite"
    url = "file:./dev.db"
  }

  model User {
    id        Int       @id @default(autoincrement())
    name      String
    email     String    @unique
    password  String
    fanworks  Fanwork[]
    createdAt DateTime  @default(now())
  }

  model Fanwork {
    id          Int      @id @default(autoincrement())
    title       String
    description String
    imageUrl    String
    imageSize   Int
    imageType   String
    isPublished Boolean  @default(false)
    userId      Int
    user        User     @relation(fields: [userId], references: [id])
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
  }
